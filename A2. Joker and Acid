t=input()
for i in range(t):
    a,b=map(int,raw_input().split())
    if (a==b):
        count=a
    else:
        if(a>b):
            a,b=b,a
        #x=a
        y=a
        arr=[0]*b
        arr[a-1]=1
        arr[b-1]=1
        count=2
        while(count<b):
            if((y+a)>=b):
                x=y+a-b
                #print "y=",b
                #Here y=b Also check if in next step y=x=b if x=b
                if(x==0 or x==b):
                    break
                y=x
                if (arr[y-1]==0):
                    count=count+1
                    arr[y-1]=1
            else:
                y=y+a
            #print "y=",y
            if(arr[y-1]==0):
                    count=count+1
                    arr[y-1]=1
    print count        
    
